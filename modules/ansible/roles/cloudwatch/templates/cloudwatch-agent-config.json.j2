{
  "agent": {
    "metrics_collection_interval": 30,
    "logfile": "/var/log/amazon-cloudwatch-agent.log",
    "debug": false,
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "{{log_file_path}}access.log",
            "log_group_name": "dev-nginx-logs-type-access",
            "log_stream_name": "{{instance_id}}",
            "timezone": "UTC"
          },
          {
            "file_path": "{{log_file_path}}error.log",
            "log_group_name": "{{cloudwatch_log_group}}-type-error",
            "log_stream_name": "{{instance_id}}",
            "timezone": "UTC"
          }		  
        ]
      }
    },
    "log_stream_name": "{{instance_id}}"
  }
}