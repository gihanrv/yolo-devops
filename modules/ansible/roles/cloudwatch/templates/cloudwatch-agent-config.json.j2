{
  "agent": {
    "metrics_collection_interval": 60,
    "logfile": "/var/log/amazon-cloudwatch-agent.log",
    "debug": false,
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "{{log_file_path}}access.log",
            "log_group_name": "{{cloudwatch_log_group}}-access",
            "log_stream_name": "{{instance_id}}-access-log",
            "timezone": "EET"
          },
          {
            "file_path": "{{log_file_path}}error.log",
            "log_group_name": "{{cloudwatch_log_group}}-error",
            "log_stream_name": "{{instance_id}}-error-log",
            "timezone": "EET"
          }        
        ]
      }
    }
  }
}
