{
  "agent": {
    "metrics_collection_interval": 60,
    "logfile": "/var/log/amazon-cloudwatch-agent.log",
    "debug": false,
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/nginx",
            "log_group_name": "{{ cloudwatch_log_group }}",
            "log_stream_name": "{{instance_id}}/var/log/nginx",
            "timezone": "UTC"
          }
        ]
      }
    },
    "log_stream_name": "{{instance_id}}"
  }
}
